@model ASP_LABB4_MVC_RAZOR.Models.Customer

<h2>Customer Details</h2>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                Name
            </dt>
            <dd class="col-sm-8">
                @Model.Name
            </dd>
            <dt class="col-sm-4">
                Email
            </dt>
            <dd class="col-sm-8">
                @Model.Email
            </dd>
            <dt class="col-sm-4">
                Address
            </dt>
            <dd class="col-sm-8">
                @Model.Address
            </dd>
            <dt class="col-sm-4">
                Phone Number
            </dt>
            <dd class="col-sm-8">
                @Model.PhoneNumber
            </dd>
        </dl>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.UserId" class="btn btn-danger">Delete</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>


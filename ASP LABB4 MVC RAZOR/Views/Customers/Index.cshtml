@model IEnumerable<ASP_LABB4_MVC_RAZOR.Models.Customer>

<h2>Customer List</h2>

<form asp-controller="Customers" asp-action="Details" method="get">
    <div class="form-group">
        <label for="customerSelect">Select Customer:</label>
        <select class="form-control" id="customerSelect" name="id">
            @foreach (var customer in Model)
            {
                <option value="@customer.UserId">@customer.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Go to Details</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Address</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.UserId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@customer.UserId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.UserId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
